            fx:id="rootPane"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Image de fond avec contraintes de taille -->
    <ImageView fx:id="backgroundImage" fitWidth="600" fitHeight="400"
               AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
               pickOnBounds="true" preserveRatio="false">
        <image>
            <Image url="@/images/parking.jpg"/>
        </image>
    </ImageView>

    <!-- Conteneur des boutons avec meilleur centrage -->
    <StackPane AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <VBox fx:id="vboxContainer" alignment="CENTER" spacing="20" maxWidth="400">
